{
  "compileOnSave": true,
  "include": [
    "src/**/*"
, "_tests_"  ],
  "typeAcquisition": {
      "include": [
          "jest"
      ]
  },
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                   
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],                      
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,     
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": ["__tests__", "build", "dist", "node_modules", "coverage"]
}
